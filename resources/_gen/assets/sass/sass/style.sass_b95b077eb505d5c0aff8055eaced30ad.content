html{font-family:montserrat,sans-serif;padding:0;color:#333}body{padding:0;margin:0;display:grid;grid-template-rows:50px 1fr 30px;grid-template-columns:20px 1fr 20px}.main-wrapper{display:flex;align-items:center;justify-content:center;grid-row:2;grid-column:2;padding-top:1rem}.main-footer{grid-row:3;grid-column:1/-1;color:#333;font-size:.9rem;text-align:center;display:flex;justify-content:center;align-items:center}.main-footer .copyright{padding:0;margin:0}.list-page-title{color:#fff;text-transform:uppercase;font-size:1.2rem}.list-page-title .subtitle{color:#333;size:.9rem;text-transform:none}.list-content{margin-top:1.5rem}.main-header{background:rgba(0,0,0,.2);grid-column:1/-1;display:flex;align-items:center}.main-header #menu-toggle{align-self:flex-end;background:0 0;border:0;position:fixed;z-index:11;top:10px;right:10px}.main-header #menu-toggle svg{height:1.5rem;width:1.5rem}@media screen and (min-width:700px){.main-header #menu-toggle{display:none}}.main-header #main-mini-menu{position:absolute;display:flex;align-items:center;flex-flow:column;background:rgba(0,0,0,.9);width:100%;padding-top:3rem;z-index:10;top:-150%;transition:top .3s ease-in-out}.main-header #main-mini-menu .main-nav{display:flex;flex-flow:column;align-items:center;font-weight:700;width:100%;text-align:center}.main-header #main-mini-menu .main-nav .main-nav-link{margin:10px 0;padding:5px 0;font-size:2rem;text-decoration:none;text-transform:uppercase;color:#fff;border-bottom:1.5px solid transparent}.main-header #main-mini-menu .main-nav .main-nav-link:hover{border-color:#fff}.main-header #main-mini-menu.open{top:0;right:0;bottom:0;left:0}@media screen and (min-width:700px){.main-header #main-mini-menu{display:none}}.main-header #main-max-menu{width:100%;display:none}.main-header #main-max-menu .main-nav{display:flex;flex-flow:row;align-items:center;justify-content:flex-end;font-weight:700;width:100%;text-align:center}.main-header #main-max-menu .main-nav .main-nav-link{transition:border .2s ease-in-out;margin:0 15px;letter-spacing:.9px;font-size:1.1rem;text-transform:uppercase;padding:5px 0 0;text-decoration:none;color:#fff;border-bottom:1.5px solid transparent}.main-header #main-max-menu .main-nav .main-nav-link:hover{border-color:#fff}@media screen and (min-width:700px){.main-header #main-max-menu{display:initial}}body{height:100vh;width:100vw;background-color:#00af94}.bio-paragraph{font-family:montserrat,sans-serif;font-weight:700;color:#333;padding:0;font-size:2rem;padding:0 1rem;max-width:700px;margin:3px auto;position:relative;box-sizing:border-box}@media screen and (min-width:700px){.bio-paragraph{font-size:3rem}}.bio-paragraph .bio-activity-link{color:#fff;text-decoration:none;border-bottom:1.5px solid transparent;transition:border .2s ease-in-out}.bio-paragraph .bio-activity-link:hover{border-bottom-color:#fff}body.writing{background:#913dc6}body.writing .main-footer{color:#ccc}body.writing .main-wrapper{align-items:flex-start;flex-flow:column}body.writing .card{background:rgba(0,0,0,.1);margin-bottom:1rem;border-radius:6px;overflow:hidden}body.writing .card-header{background:rgba(0,0,0,.1);padding:5px 10px;margin:0}body.writing .card-header .post-title{color:#fff;font-size:.9rem;padding:0;margin:0}body.writing .card-body{margin:0;padding:5px 10px;font-size:.7rem;display:flex;justify-content:space-between;flex-flow:column wrap;color:#fff}body.writing .card-body .post-description{margin:0}body.writing .card-body .read-more{font-size:.55rem;font-weight:700;text-transform:uppercase;border:1px solid #fff;border-radius:10px;padding:3px 4px;margin:1rem 0 .4rem;color:#fff;text-align:center;color:#fff;text-decoration:none;width:13ch}body.writing .card-footer{padding:0 10px 1px;color:#fff;font-size:.6rem;border-top:1px dotted #fff}body.teaching .main-wrapper{align-items:flex-start}