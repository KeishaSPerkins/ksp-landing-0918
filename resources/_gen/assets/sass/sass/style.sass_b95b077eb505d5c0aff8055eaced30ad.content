html{font-family:montserrat,sans-serif;padding:0;color:#333}body{padding:0;margin:0;display:grid;grid-template-rows:50px 1fr 30px;grid-template-columns:20px 1fr 20px}.main-wrapper{grid-row:2;grid-column:2;padding-top:1rem}.main-footer{grid-row:3;grid-column:1/-1;background:rgba(0,0,0,.25);color:#fff;text-align:center;display:flex;justify-content:center;align-items:center}.main-footer .copyright{padding:0;margin:0}.main-header{background:rgba(0,0,0,.2);grid-column:1/-1;display:flex;align-items:center;flex-flow:column}.main-nav-link{text-decoration:none;color:#fff}#main-mini-menu{background:rgba(0,0,0,.9);width:100%;position:absolute;z-index:10}#main-mini-menu .menu-toggle{align-self:flex-end}#main-mini-menu .menu-toggle .open{background:blue}#main-mini-menu .main-nav{display:flex;flex-flow:column;align-items:center;font-weight:700;width:100%;text-align:center}#main-mini-menu .main-nav .main-nav-link{margin:10px 0;padding:5px 0;border-bottom:1.5px solid transparent}#main-mini-menu .main-nav .main-nav-link:hover{border-color:#fff}@media screen and (min-width:700px){#main-mini-menu{display:none}}#main-max-menu{display:none}@media screen and (min-width:700px){#main-max-menu{display:initial}}body.home{height:100vh;width:100vw;background-color:#00af94}.home-content-wrapper{padding:0;margin:0}.bio-paragraph{font-family:montserrat,sans-serif;font-weight:700;color:#333;padding:0;font-size:1.5rem;padding:0 1rem;max-width:700px;margin:3px auto;position:relative;box-sizing:border-box}.bio-paragraph .bio-activity-link{color:#fff;text-decoration:none;border-bottom:1.5px solid transparent;transition:border .3s ease-in-out}.bio-paragraph .bio-activity-link:hover{border-bottom-color:#fff}